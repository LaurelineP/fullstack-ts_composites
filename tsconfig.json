{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "__build__",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["shared"]
    }
  },
  "files": [],
  "references": [
    { "path": "./backend" },
    { "path": "./frontend" },
    { "path": "./shared" }
  ],
  "include": ["backend/**/*", "frontend/**/*", "shared/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
